mixin logTableEntry(log, vehicle)
  td
    if user && log.author.equals(user._id)
      a(href=`/log/${log._id}/edit` class='editPencil')
        != h.icon('pencil.svg')

  td 
    a(href=`/log/${log.slug}`) #{log.name}

  td #{vehicle[0].year} #{vehicle[0].make} #{vehicle[0].model} 
  td= log.shortDescription.length > 150 ? `${log.shortDescription.substring(0,100)}...` : log.shortDescription
  td= log.longDescription.length > 150 ? `${log.longDescription.substring(0,100)}...` : log.longDescription
  td= h.moment(log.dateStarted).format("MMM Do YY")
  td= h.moment(log.dateCompleted).format("MMM Do YY")
  td= h.moment(log.dateEntered).format("MMM Do YY")
  td= h.moment(log.dateDue).format("MMM Do YY")
  td= Number(log.mileageDue).toLocaleString()
  td= log.tools.toString()
  td= log.parts.toString()
  td $#{log.partsCost}
  td $#{log.laborCost}

  td= log.serviceLocation
  td= Number(log.odometer).toLocaleString()
