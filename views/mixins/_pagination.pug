mixin pagination(page, pages, count)
  .pagination
    .pagination__prev
      if page > 1
        a(href=`/log/page/${page - 1}`) Prev
    .pagination__text
      - const resultText = count > 1 ? 'total results' : 'total result'
      p Page #{page} of #{pages} â€” #{count} #{resultText}
    .pagination__next
      if page < pages
        a(href=`/log/page/${parseFloat(page) + 1}`) Next
