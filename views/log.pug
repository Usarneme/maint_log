extends layout

include mixins/_logCard
include mixins/_pagination
include mixins/_logTableEntry

block content
  header.pageHeader
    h2.title= title

  section.pageContent
    .largeScreens.log
      table.logTable
        thead
          tr.tableHead
            th Service Performed
            th Vehicle
            th Short Desc
            //- th Long Desc
            //- th Date Started
            th Date Completed
            //- th Date Entered
            th Next Service Date
            th Next Service Mileage
            th Tools
            th Parts
            th Parts Cost
            th Labor Cost
            th Service Location
            th Odometer
        tbody
          each entry in log
            tr.logTableEntry
              +logTableEntry(entry, vehicle)
    
    .smallScreens.inner.log
      each entry in log
        +logCard(entry)

    .inner
      +pagination(page, pages, count)
