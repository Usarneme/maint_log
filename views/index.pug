extends layout

include mixins/_searchForm

block content
  .single
    .single__hero
      h2.title.title--single= title

  .single__details.inner
    if user
      .main.search__main.search
        != h.icon('log-search.svg')
        +searchForm()

      a(href='/add' class='main add')
        != h.icon('log-plus.svg')
        span Add New Log Entry

      a(href='/upcoming-maintenance' class='main upcoming-maintenance')
        != h.icon('log-clock.svg')
        span View Upcoming Scheduled Maintenance

      a(href='/log' class='main history')
        != h.icon('log1.svg')
        span View Full Maintenance Log History

      a(href='/account' class='main account')
        != h.icon('log-pencil.svg')
        span Add Your Vehicle and View Other Settings
    if !user
      a(href='/register' class='main register')
        != h.icon('register.svg')
        span Register to Start Your Maintenance Log
      a(href='/login' class='main login')
        != h.icon('login.svg')
        span Login to View Your Maintenance Log
